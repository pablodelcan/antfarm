{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "lib": ["ES2022"]
  },
  "include": ["lib/**/*.ts", "api/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
